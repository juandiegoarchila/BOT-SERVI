NODE_ENV=development
PORT=5000
JWT_SECRET=tu_super_secreto_seguro
DB_TYPE=firestore
GOOGLE_APPLICATION_CREDENTIALS=C:\Users\juand\BOT-SERVI\credenciales-firebase.json
# DB_TYPE=mongodb
# MONGO_URI=mongodb://localhost:27017/servi
# DB_TYPE=postgresql
# PG_CONNECTION=postgresql://user:password@localhost:5432/servi

# Número del administrador (opcional, para notificaciones)
ADMIN_PHONE_NUMBER=3142749518

# Modo seguro del bot: solo responde a mensajes entrantes (no campañas)
SAFE_REPLY_ONLY=true
BOT_MAX_MESSAGES_PER_MINUTE=20
BOT_MIN_DELAY_MS=400
BOT_MAX_DELAY_MS=1200

# Proveedor de WhatsApp: 'web' (whatsapp-web.js) o 'cloud' (Business Cloud API)
WHATSAPP_PROVIDER=web

# Configuración WhatsApp Business Cloud API (requerido si WHATSAPP_PROVIDER=cloud)
# Versión del Graph API
WA_CLOUD_API_VERSION=v20.0
# ID del número de teléfono (PHONE_NUMBER_ID)
WA_CLOUD_PHONE_ID=
# Access Token de la app (debe ser a largo plazo en producción)
WA_CLOUD_ACCESS_TOKEN=
# Verify Token para la verificación del webhook
WA_CLOUD_VERIFY_TOKEN=
# Opcional: Business ID
WA_CLOUD_BUSINESS_ID=

# OpenAI API Key para funciones de IA (no compartas tu clave real)
OPENAI_API_KEY=
# Número máximo de llamadas IA por conversación
AI_MAX_CALLS_PER_CONVO=12
# TTL de caché en milisegundos para respuestas IA repetidas
AI_CACHE_TTL_MS=45000